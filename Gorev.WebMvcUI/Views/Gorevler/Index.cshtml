@model IEnumerable<Gorevler>
@{
    ViewData["Title"] = "Gorevler";
}


<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Görev Adı</th>
                <th>Görev Tamamlandı Mı?</th>
                <th>Görev Oluşturuldu</th>
                <th>Düzenle</th>
            </tr>
            </thead>

            <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var i in Model)
                {
                    <tr>
                        <td>@i.GorevAdi</td>
                        <td>@i.IsCompleted</td>
                        <td>@i.DateCreate.ToShortDateString()</td>
                        <td style="text-align: center">@Html.ActionLink("Düzenle", "Duzenle", "Gorevler", new { Id = i.Id}, new { @class = "btn btn-primary btnGorevler" }) | @Html.ActionLink("Sil", "Sil", "Gorevler", new {Id = i.Id}, new{@class = "btn btn-danger btnGorevler" })</td>

                        @*<td style="text-align: center"><a href="/Gorevler/Duzenle/?Id = @i.Id" class="btn btn-primary">Düzenle</a></td>*@
                    </tr>
                }

            }
            else
            {
                <tr> 
                    <td colspan="3" class="text-center">
                        Kayıt Bulunamadı...
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Yeni Görev Ekle", "YeniGorev", "Gorevler", null, new { @class = "btn btn-warning btnGorevler" })
    </div>
</div>